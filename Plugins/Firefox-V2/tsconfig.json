{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types",
      "chrome"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "node_modules/angular-bootstrap-md/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]

}
